{
  "name": "zaken-frontend",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@amsterdam/asc-assets": "^0.26.1",
    "@amsterdam/asc-ui": "^0.26.1",
    "@reach/router": "^1.3.4",
    "@sentry/browser": "^5.28.0",
    "@testing-library/jest-dom": "^5.11.6",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.2.2",
    "@types/jest": "^26.0.15",
    "@types/lodash.debounce": "^4.0.6",
    "@types/node": "^14.11.11",
    "@types/qs": "^6.9.5",
    "@types/reach__router": "^1.3.6",
    "@types/react": "^16.9.51",
    "@types/react-dom": "^16.9.9",
    "@types/resize-observer-browser": "^0.1.4",
    "@types/styled-components": "^5.1.4",
    "amsterdam-react-final-form": "^0.1.99",
    "amsterdam-scaffold-form": "^0.1.29",
    "axios": "^0.20.0",
    "env-cmd": "^10.1.0",
    "final-form": "^4.20.1",
    "final-form-arrays": "^3.0.2",
    "immer": "^8.0.0",
    "keycloak-js": "^11.0.3",
    "lodash.debounce": "^4.0.8",
    "qs": "^6.9.4",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "react-final-form": "^6.5.2",
    "react-final-form-arrays": "^3.1.3",
    "react-scripts": "3.4.3",
    "resize-observer-polyfill": "^1.5.1",
    "slash-sandwich": "^1.0.12",
    "styled-components": "^5.2.0",
    "typescript": "^4.1.2"
  },
  "scripts": {
    "start": "PORT=2999 react-scripts start",
    "build": "react-scripts build",
    "build:acc": "env-cmd -f .env.acceptance react-scripts build",
    "build:test": "env-cmd -f .env.test react-scripts build",
    "serve:build": "env-cmd -f .env.test serve build --single -l 2999",
    "test": "react-scripts test --watchAll=false",
    "test:coverage": "react-scripts test --coverage --watchAll=false",
    "lint": "eslint --max-warnings 0 --cache --ext .ts,.tsx src",
    "lint:fix": "eslint --fix --ext .ts,.tsx src",
    "swagger:generate-schema": "TS_NODE_PROJECT='./scripts/tsconfig.json' NODE_ENV='development' ts-node scripts/src/generateSwaggerSchema.ts",
    "form-scaffolds:generate": "TS_NODE_PROJECT='./scripts/tsconfig.json' NODE_ENV='development' ts-node scripts/src/generateFormScaffolds.ts",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version",
      "IE 11"
    ]
  },
  "devDependencies": {
    "@types/dotenv-flow": "^3.1.0",
    "@types/enzyme": "^3.10.8",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "cypress": "^6.0.1",
    "dotenv-flow": "^3.2.0",
    "dtsgenerator": "^3.3.1",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.5",
    "eslint-plugin-unused-imports": "^1.0.1",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.1",
    "nock": "^13.0.5",
    "react-app-polyfill": "^1.0.6",
    "react-docgen-typescript-loader": "^3.7.2",
    "react-hooks-testing-library": "^0.6.0",
    "serve": "^11.3.2",
    "ts-loader": "^8.0.11",
    "ts-node": "^9.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "lint-staged": {
    "**/*.ts?(x)": [
      "npm run lint:fix"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts",
      "!src/**/index.{ts,tsx}"
    ]
  }
}

{
  "name": "zaken-frontend",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@datapunt/asc-assets": "^0.23.1-alpha.45",
    "@datapunt/asc-ui": "^0.23.1-alpha.47",
    "@reach/router": "^1.3.4",
    "@sentry/browser": "^5.21.1",
    "@testing-library/jest-dom": "^5.11.3",
    "@testing-library/react": "^10.4.9",
    "@testing-library/user-event": "^12.1.6",
    "@types/jest": "^26.0.10",
    "@types/jwt-decode": "^2.2.1",
    "@types/lodash.debounce": "^4.0.6",
    "@types/node": "^14.6.0",
    "@types/qs": "^6.9.4",
    "@types/reach__router": "^1.3.5",
    "@types/react": "^16.9.49",
    "@types/react-dom": "^16.9.8",
    "@types/styled-components": "^5.1.1",
    "amsterdam-react-final-form": "^0.1.98",
    "amsterdam-scaffold-form": "^0.1.29",
    "axios": "^0.20.0",
    "env-cmd": "^10.1.0",
    "final-form": "^4.20.1",
    "final-form-arrays": "^3.0.2",
    "immer": "^7.0.9",
    "jwt-decode": "^2.2.0",
    "lodash.debounce": "^4.0.8",
    "qs": "^6.9.4",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-final-form": "^6.5.1",
    "react-final-form-arrays": "^3.1.2",
    "react-scripts": "3.4.1",
    "resize-observer-polyfill": "^1.5.1",
    "slash-sandwich": "^1.0.12",
    "styled-components": "^5.2.0",
    "typescript": "^4.0.2"
  },
  "scripts": {
    "start": "PORT=2999 react-scripts start",
    "build": "react-scripts build",
    "build:acc": "env-cmd -f .env.acceptance react-scripts build",
    "build:test": "env-cmd -f .env.test react-scripts build",
    "serve:build": "env-cmd -f .env.test serve build --single -l 2999",
    "test": "react-scripts test --watchAll=false",
    "test:coverage": "react-scripts test --coverage --watchAll=false",
    "lint": "eslint --max-warnings 0 --cache --ext .ts,.tsx src",
    "lint:fix": "npm run lint -- --fix",
    "generate:swagger-schema": "TS_NODE_PROJECT='./scripts/tsconfig.json' NODE_ENV='development' ts-node scripts/src/generateSwaggerSchema.ts",
    "generate:form-scaffolds": "TS_NODE_PROJECT='./scripts/tsconfig.json' NODE_ENV='development' ts-node scripts/src/generateFormScaffolds.ts",
    "storybook": "start-storybook -p 9009 -s public",
    "storybook:build": "build-storybook -s public",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version",
      "IE 11"
    ]
  },
  "devDependencies": {
    "@storybook/addon-actions": "^6.0.21",
    "@storybook/addon-info": "^5.3.19",
    "@storybook/addon-knobs": "^6.0.21",
    "@storybook/addon-links": "^6.0.21",
    "@storybook/addon-viewport": "^5.3.19",
    "@storybook/addons": "^6.0.22",
    "@storybook/preset-create-react-app": "^3.1.4",
    "@storybook/react": "^6.0.21",
    "@types/dotenv-flow": "^3.0.0",
    "@types/enzyme": "^3.10.5",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "cypress": "^5.0.0",
    "dotenv-flow": "^3.2.0",
    "dtsgenerator": "^3.3.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.4",
    "eslint-plugin-unused-imports": "^0.1.3",
    "husky": "^4.2.5",
    "lint-staged": "^10.4.0",
    "nock": "^13.0.4",
    "react-app-polyfill": "^1.0.6",
    "react-docgen-typescript-loader": "^3.7.2",
    "react-hooks-testing-library": "^0.6.0",
    "serve": "^11.3.2",
    "ts-loader": "^8.0.1",
    "ts-node": "^8.10.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "lint-staged": {
    "**/*.ts?(x)": [
      "npm run lint:fix"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.stories.{ts,tsx}",
      "!src/**/*.d.ts",
      "!src/**/index.{ts,tsx}"
    ]
  }
}

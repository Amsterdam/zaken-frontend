{
  "name": "zaken-frontend",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@datapunt/asc-assets": "^0.20.0",
    "@datapunt/asc-ui": "^0.20.0",
    "@reach/router": "^1.3.3",
    "@testing-library/jest-dom": "^5.9.0",
    "@testing-library/react": "^10.3.0",
    "@testing-library/user-event": "^12.0.6",
    "@types/jest": "^26.0.0",
    "@types/node": "^14.0.13",
    "@types/reach__router": "^1.3.5",
    "@types/react": "^16.9.38",
    "@types/react-dom": "^16.9.8",
    "@types/styled-components": "^5.1.0",
    "amsterdam-react-final-form": "^0.1.59",
    "amsterdam-scaffold-form": "^0.1.20",
    "final-form": "^4.20.0",
    "final-form-arrays": "^3.0.2",
    "globalstate-hooks": "^0.1.6",
    "immer": "^6.0.9",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-final-form": "^6.5.0",
    "react-final-form-arrays": "^3.1.1",
    "react-scripts": "3.4.1",
    "resize-observer-polyfill": "^1.5.1",
    "styled-components": "^5.1.1",
    "typescript": "^3.9.5"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --watchAll=false",
    "test:coverage": "react-scripts test --coverage --watchAll=false",
    "lint": "eslint --cache --ext .ts,.tsx src",
    "lint:fix": "npm run lint -- --fix",
    "generate:swagger-schema": "dtsgen -o ./src/__generated__/apiSchema.d.ts -n API --url http://localhost:8000/api/v1/schema/",
    "generate:form-scaffolds": "ts-node scripts/generateFormScaffolds.ts",
    "storybook": "start-storybook -p 9009 -s public",
    "storybook:build": "build-storybook -s public"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version",
      "IE 11"
    ]
  },
  "devDependencies": {
    "@storybook/addon-actions": "^5.3.19",
    "@storybook/addon-info": "^5.3.19",
    "@storybook/addon-knobs": "^5.3.19",
    "@storybook/addon-links": "^5.3.19",
    "@storybook/addon-viewport": "^5.3.19",
    "@storybook/addons": "^5.3.19",
    "@storybook/preset-create-react-app": "^3.1.2",
    "@storybook/react": "^5.3.19",
    "@types/enzyme": "^3.10.5",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "dtsgenerator": "^2.6.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "react-app-polyfill": "^1.0.6",
    "react-docgen-typescript-loader": "^3.7.2",
    "ts-loader": "^7.0.5",
    "ts-node": "^8.10.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "lint-staged": {
    "**/*.ts?(x)": [
      "npm run lint:fix"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.stories.{ts,tsx}",
      "!src/**/*.d.ts",
      "!src/**/index.{ts,tsx}"
    ]
  }
}
